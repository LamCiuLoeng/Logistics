<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"> 
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	{% block keyword %}
		<meta content="" name="Keywords" /> 
	{% endblock %}
	
	<title>{% block title %}{{_("Logistics Management")}}{% block subtitle %}{% endblock %}{% endblock %}</title>
	
	<link href="{{url_for('static', filename='css/modaldialog/jquery.modaldialog.css')}}" rel="stylesheet" type="text/css" />
	<link href="{{url_for('static', filename='css/screen.css')}}" rel="stylesheet" type="text/css" />
	{% block extCSS %}{% endblock %}

	<script src="{{url_for('static', filename='js/jquery-1.7.1.min.js')}}" type="text/javascript"></script>
	<script src="{{url_for('static', filename='js/modaldialog/jquery.modaldialog.js')}}" type="text/javascript"></script>
	<script src="{{url_for('static', filename='js/common.js')}}" type="text/javascript"></script>
	
		
	<script language="JavaScript" type="text/javascript">
    //<![CDATA[
    	$(document).ready(function(){
			{% for category,message in get_flashed_messages(with_categories=true) %}
				{% if category == 'INFO'%}
					$.modaldialog.success('{{message}}');
				{% elif category == 'ERROR' %}
					$.modaldialog.error('{{message}}');
				{% endif %}
			{% endfor %}	
		});
    //]]>
   </script>

	{% block extJS %}{% endblock %}
</head>

<body>
	<div id="container">
		{% block header %}
			<div id="header">
				<!-- header Here -->
				<ul>
					<li><a href="/index">首页</a></li>
					{% if not session.get('login',None)%}
						<li><a href="{{url_for('bpAuth.login')}}">{{_('Login')}}</a></li>
						<li><a href="{{url_for('bpAuth.register')}}">{{_('Register')}}</a></li>
					{% else %}
						<li><a href="{{url_for('bpAuth.logout')}}">{{_('Logout')}}</a></li>
					{% endif %}
				</ul>
			</div>
		{% endblock %}
		
		{% block main %}
			<div id="main">
				<div id="main_content">
					{% block content %}
					<!-- Main Content Here -->
					{% endblock %}
				</div>
			</div>
		{% endblock %}
		
		{% block footer %}
			<div id="footer">
				<!-- footer Here -->
			</div>
		{% endblock %}
	</div>
</body>
</html>